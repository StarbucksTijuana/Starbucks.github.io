/* estilo para el header 1 */
h1
{
	color:#D0D3D4;
	font-family: Arial;
	font-size: 50px;
	text-align: center;
}
/* estilo para paragraph */
p
{
	color:#D0D3D4;
	font-family: Arial;
	font-size: 10px;
	text-align: center;
	font-weight: bold;
	font-style: italic;
}
/* estilo para tables */
/* PRODUCTOS*/
table.table1
{
	color: #D0D3D4;
	font-family: Arial;
	font-size: 20px;
	text-align: center;
	font-weight: bold;
	font-style: italic;
	border: 0;
	width: 100%;
	height: 0%;
	border-color: #138D75;
	border-style: solid;
	margin-left: auto;
	margin-right: auto;
	border-collapse: collapse;
}

/* estilo para table.table1:header */
table.table1 th
{
	color: #D0D3D4;
	font-family: Arial;
	font-size: 20px;
	text-align: center;
	background-color: #138D75;
	border-color: #707B7C;
	border-style: solid;
}

/* estilo para table.table1::columnas */
table.table1 td
{
	color: #bfd9ca;
	font-family: Arial;
	font-size: 20px;
	text-align: center;
	background-color: #58D68D;
	border-color: #707B7C;
	border-style: solid;
}

/* estilo para table.table1::renglones */
table.table1 tr
{
	color: #D0D3D4;
	font-family: Arial;
	font-size: 20px
	text-align: center;
